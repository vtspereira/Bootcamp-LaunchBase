{% extends "layout.njk" %}

{% block content %}

<div class="img__container">
  <div class="img-title">
    <h1>The best recipes</h1>
    <p>Learn how to build the best dishes with recipes created by professionals from around the world</p>
    <div class="chef-img">
      <img src="/chef.png" alt="chef">
    </div>
  </div>
</div>

<div class="most-accessed">
  <h1>Most accessed</h1>
</div>

<section class="cards">
  <div class="card">
    <div class="card__image">
      <img src="/burger.png">
    </div>
    <div class="card-title">
      <h1>Triplo bacon burger</h1>
    </div>
    <div class="card-author">
      <p>por Jorge Relato</p>
    </div>
  </div>

  <div class="card">
    <div class="card__image">
      <img src="/pizza.png">
    </div>
    <div class="card-title">
      <h1>Pizza 4 estações</h1>
    </div>
    <div class="card-author">
      <p>por Fabiana Melo</p>
    </div>
  </div>

  <div class="card">
    <div class="card__image">
      <img src="/espaguete.png">
    </div>
    <div class="card-title">
      <h1>Espaguete ao alho</h1>
    </div>
    <div class="card-author">
      <p>por Júlia Kinoto</p>
    </div>
  </div>

  <div class="card">
    <div class="card__image">
      <img src="/lasanha.png">
    </div>
    <div class="card-title">
      <h1>Lasanha mac'n cheese</h1>
    </div>
    <div class="card-author">
      <p>por Juliano Vieira</p>
    </div>
  </div>

  <div class="card">
    <div class="card__image">
      <img src="/doce.png">
    </div>
    <div class="card-title">
      <h1>Docinhos pão-do-céu</h1>
    </div>
    <div class="card-author">
      <p>por Ricardo Golvea</p>
    </div>
  </div>

  <div class="card">
    <div class="card__image">
      <img src="/asinhas.png">
    </div>
    <div class="card-title">
      <h1>Asinhas de frango ao barbecue</h1>
    </div>
    <div class="card-author">
      <p>por Vania Steroski</p>
    </div>
  </div>
</section>

{% endblock %}