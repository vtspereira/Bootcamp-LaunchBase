{% extends "layout.njk" %}

{% block head %}
    <title>About Vitor Soares</title>

{% endblock %}

{% block content %}

    <div id="wrapper">
        <img src="{{about.avatar_url}}" alt="Picture {{about.name}}">
        <h1>{{about.name}}</h1>
        <h2>{{about.role}}</h2>

        <p>{{about.description}}</a>
    </p>
</div>

<div id="links-footer" class="links">

    {% for link in about.links %}
        <a href="{{link.url}}" target="blank">{{link.name}}</a>
    {% endfor %}
</div>

{% endblock %}